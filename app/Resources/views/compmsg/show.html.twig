{% extends 'base.html.twig' %}

{% block body %}
    <h1>Compmsg</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compmsg.id }}</td>
            </tr>
            <tr>
                <th>Msg</th>
                <td>{{ compmsg.msg }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if compmsg.date %}{{ compmsg.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('compmsg_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('compmsg_edit', { 'id': compmsg.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
